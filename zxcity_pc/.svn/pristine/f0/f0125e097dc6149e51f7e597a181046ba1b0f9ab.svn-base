li {
    list-style: none;
}

body {
    background: #f4f4f4;
    #wrapper {
        width: 1140px;
        margin: 0 auto;
        background: #f2f2f2;
        position: relative;
        .breadNav {
            width: 786px;
            height: 66px;
            line-height: 66px;
            ol {
                float: left;
                margin: 0;
                padding: 0;
                li {
                    float: left;
                    margin-right: 10px;
                    &:nth-child(2) {
                        width: 10px;
                        height: 66px;
                        background: url(../img/rightIcon.png) no-repeat center;
                    }
                    &:first-child:before {
                        content: '';
                        display: inline-block;
                        float: left;
                        width: 4px;
                        height: 24px;
                        background-color: #e0041a;
                        margin: 21px 5px 0 0;
                    }
                    a {
                        float: left;
                        font-size: 20px;
                        font-weight: bold;
                        color: #666666;
                    }
                }
            }
            .mobilePhone {
                float: right;
                width: 134px;
                height: 66px;
                font-size: 12px;
                color: #999999;
                text-align: right;
                background: url(../img/phone.png) no-repeat;
                background-position: left center;
            }
        }
        .mainLeft {
            width: 786px;
            height: 1000px;
            background: pink;
            .mainLeft-title {
                width: 786px;
                height: 75px;
                line-height: 75px;
                background-color: #ffffff;
                font-size: 24px;
                color: #333333;
                padding-left: 27px;
            }
            .mainLeft-bg {
                position: relative;
                width: 786px;
                height: 420px;
                background-image: url(../img/mainImg.png);
                background-repeat: no-repeat;
                background-size: cover;
                .enroll-num {
                    position: absolute;
                    left: 486px;
                    top: 341px;
                    font-size: 22px;
                    line-height: 1;
                    color: #ffffff;
                    div {
                        position: relative;
                        width: 275px;
                        height: 32px;
                        line-height: 32px;
                        background-color: #ff4e62;
                        border-radius: 10px;
                        text-align: center;
                        &:before {
                            content: '';
                            position: absolute;
                            top: 0;
                            left: 36px;
                            width: 0;
                            height: 0;
                            border-left: 6px solid transparent;
                            border-right: 6px solid transparent;
                            border-top: 8px dotted #ffffff;
                        }
                        &:after {
                            content: '';

                        }
                    }
                }
            }
        }
        .sidebar {
            position: absolute;
            top: 66px;
            right: 0;
            width: 328px;
            .issuer {
                position: relative;
                width: 327px;
                height: 151px;
                background-color: #ffffff;
                margin-bottom: 16px;
                .issuer-Info {
                    position: absolute;
                    left: 30px;
                    top: 30px;
                    width: 56px;
                    height: 56px;
                    background-image: url(../img/headImg.png);
                    background-repeat: no-repeat;
                    background-size: cover;
                }
                span {
                    &:nth-child(2) {
                        position: absolute;
                        top: 30px;
                        left: 100px;
                        font-size: 18px;
                        color: #cccccc;
                    }
                    &:nth-child(3) {
                        position: absolute;
                        left: 100px;
                        top: 55px;
                        font-size: 20px;
                        color: #333333;
                    }
                    &:nth-child(4) {
                        position: absolute;
                        top: 40px;
                        right: 40px;
                        font-size: 14px;
                        font-weight: bold;
                        padding: 5px;
                        color: #ff3145;
                        border: 1px solid #ff3145;
                        border-radius: 5px;
                    }
                }
            }
            .hotCircle {
                margin: 5px 0 20px 0;
                .sidebar-title {
                    width: 327px;
                    height: 50px;
                    background-color: #7A70EE;
                    background-image: url(../img/seniorityIcon.png);
                    background-repeat: no-repeat;
                    background-position: 14px center;
                    -webkit-border-radius: 5px;
                    -moz-border-radius: 5px;
                    border-radius: 5px;
                    .txt {
                        font-size: 20px;
                        color: #ffffff;
                        font-weight: bold;
                        margin: 0;
                        margin-left: 40px;
                        line-height: 47px;
                    }
                }
                .sidebar-list {
                    li {
                        position: relative;
                        margin-top: 20px;
                        .headImg {
                            float: left;
                            margin: 0 17px 0 14px;
                            width: 101px;
                            height: 100px;
                        }
                        .info {
                            .title {
                                font-size: 20px;
                                font-weight: bold;
                                line-height: 1;
                                overflow: hidden;
                                -ms-text-overflow: ellipsis;
                                text-overflow: ellipsis;
                                white-space: nowrap
                            }
                            .userName {
                                font-size: 18px;
                                color: #cccccc;
                                margin-bottom: 28px;
                            }
                            .actionStart {
                                font-size: 14px;
                                font-weight: bold;
                                color: #cccccc;
                            }
                            .num {
                                position: absolute;
                                top: -25px;
                                left: 15px;
                                font-size: 40px;
                                color: #ff9ccd;
                            }
                        }
                    }
                }
            }
            .hotFans {
                .sidebar-title {
                    width: 327px;
                    height: 50px;
                    background-color: #ff808c;
                    background-image: url(../img/seniorityIcon.png);
                    background-repeat: no-repeat;
                    background-position: 14px center;
                    -webkit-border-radius: 5px;
                    -moz-border-radius: 5px;
                    border-radius: 5px;
                    .txt {
                        font-size: 20px;
                        color: #ffffff;
                        font-weight: bold;
                        margin: 0;
                        margin-left: 40px;
                        line-height: 47px;
                    }
                }
                .sidebar-list {
                    li {
                        position: relative;
                        margin-top: 20px;
                        .headImg {
                            float: left;
                            margin: 0 17px 0 14px;
                            width: 101px;
                            height: 100px;
                        }
                        .info {
                            .title {
                                font-size: 20px;
                                font-weight: bold;
                                line-height: 1;
                                overflow: hidden;
                                -ms-text-overflow: ellipsis;
                                text-overflow: ellipsis;
                                white-space: nowrap
                            }
                            .userName {
                                font-size: 18px;
                                color: #cccccc;
                                margin-bottom: 23px;
                            }
                            .actionStart {
                                font-size: 14px;
                                font-weight: bold;
                                color: #cccccc;
                            }
                            .num {
                                position: absolute;
                                top: -25px;
                                left: 15px;
                                font-size: 40px;
                                color: #ff9ccd;
                            }
                        }
                    }
                }
            }
        }
    }
}
