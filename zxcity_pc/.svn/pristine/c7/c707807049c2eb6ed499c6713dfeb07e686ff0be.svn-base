.main-wrap{
    padding-top:30px;
}
.state-bar{
    width:100%;
    height:90px;
}
.state-bar ul{
    display:flex;
    justify-content: space-around;
}
.state-bar ul>li{
    text-align: center;
}

.state-bar ul>li.state-item span{
    display: inline-block;
    width:44px;
    height:44px;
    line-height: 44px;
    text-align: center;
    background-color: #ddd;
    color:#fff;
    font-size:24px;
    border-radius: 100%;
    margin-bottom:14px;
}
.state-bar ul>li.state-item.active span{
    background-color: #68affe;
}
.state-bar ul>li.state-item p{
    color:#999;
    font-size:16px;
}
.state-bar ul>li.line div{
    width:384px;
    height:2px;
    background-color: #ddd;
    margin-top:22px;
}
.state-bar ul>li.line.state1 div{
    background: -webkit-linear-gradient(left, #68affe, #ddd);
    background: -moz-linear-gradient(left, #68affe, #ddd);
    background: -o-linear-gradient(left, #68affe, #ddd);
    filter: progid:DXImageTransform.Microsoft.gradient(GradientType=1, startColorstr=#68affe, endColorstr=#ddd);/*IE<9>*/
    -ms-filter: "progid:DXImageTransform.Microsoft.gradient (GradientType=1, startColorstr=#68affe, endColorstr=#ddd)";/*IE8+*/
}
.state-bar ul>li.line.state2 div{
    background-color: #68affe;
}
.form-content{
    padding-top:110px;
    text-align: center;
}
.form-content form{
    width:340px;
    margin:0 auto;
}
.form-content form .form-group{
    margin-bottom:30px;
}
form input[type=text],
form input[type=password]{
    width:340px;
    height:46px;
    margin:0 auto;
    font-size:16px;
}
form .form-group input[name=checkCode]{
    width:220px;
}
.get-check-code{
    width:100px;
    height:46px;
    background-color:#68affe;
    color:#fff;
}
form .submit-btn{
    width:100%;
    height:46px;
    background-color: #fe6869;
    color:#fff;
    font-size:16px;
}
form .btn:hover{
    color:#fff;
}
.set-state span{
    display:inline-block;
    line-height: 50px;
    font-size:18px;
    color:#333;
    margin-left:20px;
}
.set-state .success i,
.set-state .failure i{
    display:inline-block;
    width:48px;
    height:48px;
    background-repeat: no-repeat;
    vertical-align: middle;
}
.set-state .success i{
    background-image: url(image/allright.png);
}
.set-state .failure i{
    background-image: url(image/error.png);
}
