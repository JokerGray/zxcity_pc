ul,li{
    margin:0;
    padding:0;
}
img{
    width:100%;
    height:100%;
}
i{
    font-style: normal;
}
a, a:hover, a:active, a:focus, a:link{
    text-decoration: none;
}
html{
    height:100%;
    overflow-y:auto;
}
body{
    position:relative;
    font-family: 'microsoft yahei',Helvetica,Arial,sans-serif;
    min-height: 100%;
    padding-bottom:235px;
}
/**header css*/
header, .header{
    height:104px;
    width:100%;
}

.header-top{
    height:52px;
    line-height: 52px;
    background-color: #433f50;
}
.header-top .logo{
    margin:0;
}
.header-top a,
.header-top span{
    font-size:18px;
    color:#eee;
}
.header-nav{
    height:52px;
    padding-top:5px;
    background-color:#3c3849;
}
.header-nav .nav>li>a{
    padding:8px 15px;
    font-family:microsoft yahei;
    font-size:18px;
    color:#fff;
}
.header-nav .nav>li>a:focus,
.header-nav .nav>li>a:hover{
    background-color:#433f50;
}

/**footer css*/
footer, .footer{
    position:absolute;
    bottom:0;
    width:100%;
    height:235px;
    color:#fff;
}
.footer .footer-link{
    height:195px;
    padding-top:30px;
    background-color: #433f50;
    text-align: center;
}

.footer .copyright{
    height:40px;
    line-height: 40px;
    background-color:#3c3849;
    text-align: center;
}

/**pop-box*/
.pop-box{
    position: fixed;
    top:0;
    left:0;
    right:0;
    bottom:0;
    width:100%;
    height:100%;
}
.pop-mask{
    position: absolute;
    top:0;
    left:0;
    right:0;
    bottom:0;
    background-color: rgba(0,0,0,0.5);
    background-color: #000;
    opacity: 0.5;
    filter: alpha(opacity=50);
}
.pop-inner{
    position:absolute;
    top:50%;
    left:50%;
    width:500px;
    height:500px;
    margin-top:-250px;
    margin-left:-250px;
    padding-left:70px;
    padding-right:70px;
    background-color: #fff;
    z-index:99;
}
.pop-inner .pop-title{
    margin-top:35px;
    margin-bottom:35px;
    font-size: 22px;
    color:#666;
    text-align: center;
}
.pop-inner .pop-con{
    color:#666;
}
.pop-inner .pop-con input[type=text]{
    height:46px;
    border:1px solid #dcdcdc;
    margin-bottom:12px;
}
.pop-inner .pop-con input[type=checkbox]{
    width:22px;
    height:22px;
    margin-top:0px;
    margin-left: -25px;
}
.pop-inner .pop-con .checkbox label{
    padding-left:25px;
}
.pop-inner .pop-con button{
    width:100%;
    height:46px;
    font-size:16px;
}
.pop-inner .pop-con a{
    color: currentColor;
}
.pop-inner .pop-con .submit-btn{
    margin-top:20px;
    background-color: #fe6869;
    color:#fff;
}
.pop-inner .pop-con .change-btn{
    background-color: #eee;
    color:#fe6869;
}
.pop-con .security-code button{
    width:auto;
    background-color: #68affe;
    color:#fff;
    text-align:center;
}
.pop-con .security-code input[type=text]{
    display:inline-block;
    width:235px;
    margin-left:12px;
}


@keyframes jump {
    0% {
        transform: translate(0, 0);   }
    25% {
        transform: translate(0, 0.1rem);   }
    50% {
        transform: translate(0, 0);   }
    75% {
        transform: translate(0, -0.1rem);   }
    100% {
        transform: translate(0, 0);   }
}
