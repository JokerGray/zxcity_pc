@CHARSET "UTF-8";
.section1{
    position:relative;
    width:100%;
    height:100vh;
    background-image: url(image/index_bg.jpg);
    background-repeat: no-repeat;
    background-position: top center;
    background-size: cover;
    background-attachment: fixed;
}
.section1 .wrap-inner{
    position:relative;
    height:100%;
    transition: all 1.5s;
}
.section1 .slogen{
    position:absolute;
    top:36%;
    left:-200%;
}
.section1 .app-show-img{
    position: absolute;
    top:32%;
    right:-200%;
}
.section1 .download-link{
    position:absolute;
    top:56%;
    left:-200%;
}
.section1.active .slogen{
    left:80px;
}
.section1.active .app-show-img{
    right:90px;
}
.section1.active .download-link{
    left:80px;
}
.download-link a{
    display:inline-block;
    width:239px;
    height:73px;
    background-repeat: no-repeat;
}
.download-link a.ios-icon{
    background-image:url(image/ios_download_icon.png);
}
.download-link a.android-icon{
    margin-left:90px;
    background-image:url(image/android_download_icon.png);
}
